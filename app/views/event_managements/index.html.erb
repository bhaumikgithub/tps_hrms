<nav class="clean">
  <div class="nav-wrapper">
    <div class="col s12">
      <%= link_to("Dashboard", root_path , class: "breadcrumb") %>
      <%= link_to("Event Management", '#' , class: "breadcrumb") %>
    </div>
  </div>
</nav>
<div class="row">
    <div class="col s12">
      <div id="borderless-table" class="card card-tabs">
        <div class="card-content">
          <div class="card-title">
            <div class="row">
              <div class="col s12 m6 l10">
                <h3 class="card-title"><b>Event Management<b></h3>
              </div>
              <% if current_user.is_event_manager? || current_user.admin? %>
                <div class="col s12 m6 l2">
                  <ul class="">
                    <li><%= link_to 'ADD', add_session_event_managements_path, class: "btn cyan waves-effect waves-lightc " %></li>
                  </ul>
                </div>
              <% end %>
            </div>
          </div>
          <div id="view-borderless-table">
            <div class="row">
              <div class="col s12 table-responsive">
                <table class="designation-table">
                  <thead>
                    <tr>
                      <th data-field="id">Title</th>
                      <th>Subject</th>
                      <th>Date</th>
                      <th>Time</th>
                      <th>Take By</th>
                      <% if current_user.admin? || current_user.is_event_manager? %>
                        <th></th>
                        <th></th>
                      <% end %>
                    </tr>
                  </thead>
                  <tbody>
                    <% @arrange_sessions.each do |arrange_session| %>
                      <tr>
                        <td><%= arrange_session&.title %></td>
                        <td><%= arrange_session&.subject %></td>
                        <td><%= arrange_session&.date.try(:strftime, "%d-%m-%Y") %></td>
                        <td><%= arrange_session&.timing.try(:strftime, "%I:%M %p") %></td>
                        <td><%= arrange_session&.username %></td>
                        <% if current_user.admin? || current_user.is_event_manager? %>
                          <td><%= link_to 'Edit', edit_session_event_management_path(arrange_session.id) %></td>
                          <td><%= link_to 'Delete', delete_session_event_management_path(arrange_session.id), method: :delete, data: {confirm: "Are you sure?"}  %></td>
                        <% end %>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
<nav class="clean">
  <div class="nav-wrapper">
    <div class="col s12">
      <%= link_to("Dashboard", root_path , class: "breadcrumb") %>
      <%= link_to("Holiday", '#' , class: "breadcrumb") %>
    </div>
  </div>
</nav>
<div class="row">
    <div class="col s12">
      <div id="borderless-table" class="card card-tabs">
        <div class="card-content">
          <div class="card-title">
            <div class="row">
              <div class="col s12 m6 l10">
                <h3 class="card-title"><b>Holidays<b></h3>
              </div>
              <div class="col s12 m6 l2">
                <ul class="">
                  <% if current_user.admin? %>
                    <li><%= link_to 'ADD', new_holiday_path, class: "btn cyan waves-effect waves-lightc " %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col s3">
              <div class="select_width">
                <%= select_tag "leave_type", options_for_select([ "Future", "Past" ], "Future"), class: "form-control leave_type_seletbox" %>
              </div>
            </div>
          </div>
          <div id="view-borderless-table">
            <div class="row">
              <div class="col s12">
                <table>
                  <thead>
                    <tr>
                      <th data-field="id">Festival</th>
                      <th data-field="id">Date</th>

                      <th></th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody class="holiday_body">
                    <%= render partial: 'holiday', locals: { resources: @resources } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script type="text/javascript">
$('.leave_type_seletbox').on('change', function(){
  var leave_type = $(this).val();
  console.log(leave_type);
  $.ajax({
    url: "/holidays/holiday_filter",
    type: "GET",
    data: { leave_type: leave_type },
    dataType: "script"
  });
})
</script>
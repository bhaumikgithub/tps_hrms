<nav class="clean">
  <div class="nav-wrapper">
    <div class="col s12">
      <%= link_to("Dashboard", root_path , class: "breadcrumb") %>
      <%= link_to("Report", '#' , class: "breadcrumb") %>
      <%= link_to("New", '#' , class: "breadcrumb active") %>
    </div>
  </div>
</nav>
<% if @resource.errors.any? %>
<ul>
  <% @resource.errors.full_messages.each do |msg| %>
    <li class="red_font_clr"><%= msg %></li>
  <% end %>
</ul>
<% end %>
<div class="row">
  <div class="col s12">
    <div id="input-fields" class="card card-tabs O-visible">
      <div class="card-content">
        <div class="card-title">
          <div class="row">
            <div class="col s12 m6 l10">
              <h4 class="card-title"><%=  @resource.new_record? ?  'Create Report' : 'Edit Report'%></h4>
            </div>
          </div>
        </div>
        <div id="view-input-fields">
          <div class="row">
            <div class="col s12">
              <%= form_for @resource, class: 'row' do |f| %>
                <div class="col s12">

                  <div class="input-field col m6">
                    <div id="view-date-picker">
                      <label for="birthdate">Start Time</label>
                      <%= f.text_field :start_time, class: 'timepicker',id:"birthdate", :value => @resource.start_time&.strftime("%d-%m-%Y") %>
                    </div>
                  </div>
                  <div class="input-field col m6">
                    <div id="view-date-picker">
                      <label for="birthdate">End Time</label>
                      <%= f.text_field :end_time, class: 'timepicker',id:"birthdate", :value => @resource.end_time&.strftime("%d-%m-%Y") %>
                    </div>
                  </div>

                  <div class="input-field col m6">
                    <div id="view-date-picker">
                      <label for="birthdate">Date</label>
                      <%= f.text_field :date, class: 'datepicker',id:"birthdate", :value => @resource.date.present? ? @resource.date&.strftime("%d-%m-%Y") : Date.today%>
                    </div>
                  </div>

                  <div class="input-field col m6">
                    <%= f.text_field :total_hours,id: "total_hours", class: "validate" %><br />
                    <label for="total_hours">Total Hours</label>
                  </div>

                  <div class="input-field col s12">
                    <%= f.text_area :detail,id: "detail", class: "materialize-textarea" %><br />
                  <label for="detail">Update</label>
                  </div>

                  <!-- <div class="input-field col m6">
                    <label for="detail">Update</label>
                  </div> -->


                  <div class="input-field col m6 s12">
                    <%= f.hidden_field :project_member_id, value: params[:project_member_id] %>
                  </div>                   
                 
                   

                  <div class="input-field col s12 mobile-center">
                    <%= f.submit 'Submit', class: "btn btn-success mb-2" %>
                    <%= link_to("Back", user_reports_path , class: "btn cyan waves-effect waves-light mb-2" ) %>
                  </div>
                </div>
               <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('.timepicker').timepicker({
      format: 'dd/mm/yyyy'
    });
    $('.datepicker').datepicker({
      format: 'dd/mm/yyyy'
    });
  });
</script>

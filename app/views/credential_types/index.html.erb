<nav class="clean">
  <div class="nav-wrapper">
    <div class="col s12">
      <%= link_to("Dashboard", root_path , class: "breadcrumb") %>
      <%= link_to("Credential Types", '#' , class: "breadcrumb") %>
    </div>
  </div>
</nav>
<div class="row">
    <div class="col s12">
      <div id="borderless-table" class="card card-tabs">
        <div class="card-content">
          <div class="card-title">
            <div class="row">
              <div class="col s12">
                <div class="card-title d-flex">
                <span class="font-26 flex-grow-1">Credential Types</span>
                <span><%= link_to 'ADD', new_credential_type_path, class: "btn cyan waves-effect waves-lightc " if (can? :manage, CredentialType) || (can? :create, CredentialType) %></span>
              </div>
            </div>
          </div>
          <div id="view-borderless-table">
            <div class="row">
              <div class="col s12 table-responsive">
                <table id="credential_type_table">
                  <thead>
                    <tr>
                      <th data-field="id">PName</th>
                      <th></th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @resources.each do |credential| %>
                      <tr>
                        <td><%= credential.name %></td>
                        <td><%= link_to 'Edit', edit_credential_type_path(credential.id) if (can? :manage, CredentialType) || (can? :update, CredentialType) %></td>
                        <td><%= link_to 'Delete', credential_type_path(credential.id), method: :delete, data: {confirm: "Are you sure?"} if (can? :manage, CredentialType) || (can? :destroy, CredentialType)  %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script type="text/javascript">
  
  $('#credential_type_table').DataTable({
    "dom": 'lf<<"datatable-responsive"t>ip>',
    responsive: true,
    "pageLength": 100
  });

</script>
<div id="app-calendar">
    <div class="row">
      <div class="col s3">
        <div class="card">
          <div class="card-content">
            <table class="table table-borderless">
              <% @users.each do |user| %>
                <tr class="user_events" id="<%= user.id %>">
                  <td><%= user.full_name+ ':' %></td>
                  <td><%= ( user.user_leaves.present? ? user.user_leaves.map { |e| (e.leave_array[0].count)*e.leave_array[1]  } : [0] ).sum%></td>
                </tr>
              <% end %>
            </table>

          </div>
        </div>
      </div>
      <div class="col s9">
        <div class="card">
          <div class="card-content">
            <h4 class="card-title">
            </h4>
            <div id="calendar"></div>
          </div>
        </div>
      </div>
    </div>
</div>


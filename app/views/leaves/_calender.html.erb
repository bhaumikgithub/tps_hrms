<div id="app-calendar">
    <div class="row">
      <div class="col s3">
        <div class="card">
          <div class="card-content">
            <table class="table table-borderless">
              <% @users.each do |user| %>
                <tr>
                  <td id="<%= user.id %>"><%= user.full_name+ ':' %></td>
                  <td><%= ( user.user_leaves.present? ? user.user_leaves.map { |e| (e.leave_array[0].count)*e.leave_array[1]  } : [0] ).sum%></td>
                </tr>
              <% end %>
              <tr>
                <td id=''>All</td>
                <td></td>
              </tr>
            </table>

          </div>
        </div>
      </div>
      <div class="col s9">
        <div class="card">
          <div class="card-content">
            <h4 class="card-title">
            </h4>
            <div id="calendar"></div>
          </div>
        </div>
      </div>
    </div>
</div>

<script>
  $(document).on("click", ".table-borderless td", function(e) {
    var user_id = $(this).attr('id');
    get_user_events(user_id)
  }); 
  $(document).ready(function() {
    $('#calendar').fullCalendar({
      defaultDate: '2019-08-12',
      editable: false,
      eventLimit: true,
      events: '/leaves/get_events',
    });
  });

  function get_user_events(user_id) {
    $.ajax({
      type: "GET", 
      url: "/leaves/get_events",
      data: {user_id: user_id},
      success: function(data){
        $("#calendar").fullCalendar('removeEvents'); 
        $("#calendar").fullCalendar('addEventSource', data); 
      }
    })
  }

</script>

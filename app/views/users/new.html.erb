<div class="row">
  <div class="col s12">
    <div id="input-fields" class="card card-tabs">
      <div class="card-content">
        <div class="card-title">
          <div class="row">
            <div class="col s12 m6 l10">
              <h4 class="card-title">Create User</h4>
            </div>
          </div>
        </div>
        <div id="view-input-fields">
          <div class="row">
            <div class="col s12">
              <%= form_for @user, :url => url_for(:controller => 'users', :action => 'create_user') do |f| %>
                <%= render 'form', f: f %>
               <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

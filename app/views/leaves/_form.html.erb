<div class="row">
  <div class="col s12">
    <div id="input-fields" class="card card-tabs">
      <div class="card-content">
        <div class="card-title">
          <div class="row">
            <div class="col s12 m6 l10">
              <h4 class="card-title">Leave</h4>
            </div>
          </div>
        </div>
        <div id="view-input-fields">
          <div class="row">
            <div class="col s12">
              <%= form_for @resource, class: 'row' do |f| %>
                <div class="col s12">
                  <div class="input-field col s12">
                    <%= f.select(:leave_type, Leave::LEAVE_TYPES.map { |e| [e.humanize, e]  }, {:include_blank => "Select"}, {:class => "some_class"} ) %>
                    <label>Type</label>
                  </div>

                  <div class="input-field col s12">
                    <%= f.select(:user_id, User.all.collect{|p| [p.first_name, p.id]}, {:include_blank => "Select"}, {:class => "some_class"} ) %>
                    <label>Employee</label>
                  </div>

                  <div class="input-field col s12">
                    <%= f.select(:approved_by_id, User.all.collect{|p| [p.first_name, p.id]}, {:include_blank => "Select"}, {:class => "some_class"} ) %>
                    <label>Approved By</label>
                  </div>

                  <div class="input-field col s12">
                    <div class="col s6">
                      <div id="view-date-picker">
                        <label for="birthdate">Start date</label>
                        <%= f.text_field :leave_date, class: 'datepicker',id:"birthdate" %>
                      </div>                      
                    </div>
                    <div class="col s6">
                      <div id="view-date-picker">
                        <label for="birthdate">End date</label>
                        <%= f.text_field :end_date, class: 'datepicker',id:"birthdate" %>
                      </div>                      
                    </div>

                  </div>
                  <div class="input-field col s12">
                    <%= f.submit 'Submit', class: "btn cyan waves-effect waves-light" %>
                  </div>
                </div>
               <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>

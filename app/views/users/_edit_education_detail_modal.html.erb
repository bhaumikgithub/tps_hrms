<div id="edit_education_detail_modal" class="modal">
  <div class="modal-content">
    <h4>Education Detail</h4>
    <%= form_for :education, :url => url_for(:controller => 'users', :action => 'update_education') do |f| %>
      <div class="col s12">
        <div id="input-fields" class="card card-tabs">
          <div class="card-content">
            <div class="card-title">
              <div class="row">
                <div class="input-field col s12">
                  <%= f.select(:degree_id, Degree.all.order('name').collect{|p| [p.name, p.id]}, {:include_blank => "Select"}, {:class => "some_class"} ) %>
                    <label for="degree">Degree</label>
                </div>

                <div class="input-field col s12">
                  <%= f.text_field :college,  id: "", required: true %><br />
                  <label class="active">College</label>
                </div>

                <div class="input-field col s12">
                  <%= f.text_field :university,  id: "university_name", required: true %><br />
                  <label for="university_name" class="active">University</label>
                </div>
                <%= f.hidden_field :user_id, :value => @education.user_id %>
                <%= hidden_field_tag :education_id, @education.id %>
                <div class="input-field col m6 s12">
                  <%= f.text_field :from, class: 'datepicker from_education_date',id:"start_education_date", :value => @education&.from&.strftime("%b %d, %Y") %><br />
                  <label for="from">From</label>
                </div>

                <div class="input-field col m6 s12">
                  <%= f.text_field :to, class: 'datepicker to_education_date',id:"end_education_date", :value => @education&.to&.strftime("%b %d, %Y") %><br />
                  <label for="to"  class="<%= @education&.to.present? ? 'active' : ''%>">To</label>
                </div>

                <div class="input-field col m6 s12">
                  <%#= f.check_box :is_current, id:"is_current_checkbox" %>
                  <%= f.check_box :is_current, {:id => "is_current_checkbox", :style => "opacity: initial;pointer-events: auto;"}%>
                  <label for="to">Current</label>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="input-field col s12 mobile-center">
        <%= f.submit 'Submit' ,class: "btn btn-success mb-2" %>
        <a href="#!" class="modal-close btn cyan waves-effect waves-light mb-2">Cancel</a>
      </div>
    <% end %>
  </div>
</div>

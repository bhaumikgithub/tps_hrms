<div class="row">
  <div class="col s12">
    <div id="input-fields" class="card card-tabs">
      <div class="card-content">
        <div class="card-title">
          <div class="row">
            <div class="col s12 m6 l10">
              <h4 class="card-title"><%=  @resource.new_record? ?  'Create Handbook' : 'Edit Handbook'%></h4>
            </div>
          </div>
        </div>
        <div id="view-input-fields">
          <div class="row">
            <div class="col s12">
              <%= form_for @resource, class: 'row' do |f| %>

                <div class="col s12">
                  <div class="input-field col s6">
                      <label for="section">Section</label>
                     <%= f.text_field :section%>
                  </div>
                </div>

                <div class="col s12">
                  <div class="input-field">
                   
                    <%= f.cktext_area :content, as: :ckeditor %>
                  </div>
                </div>

                  <div class="input-field col s12">
                    <%= f.submit 'Submit', class: "btn btn-success" %>
                    <%= link_to("Cancel", employee_handbooks_path , class: "btn cyan waves-effect waves-light" ) %>

                  </div>
                </div>
               <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

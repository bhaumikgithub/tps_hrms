<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TpsHrms</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
     <%= stylesheet_link_tag "https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" %> 
    <%= javascript_include_tag 'application' %>
     <%= stylesheet_link_tag "https://cdn.ckeditor.com/4.12.1/standard/ckeditor.js" %> 
  </head>

  <% if user_signed_in? %>
    <body class="vertical-layout vertical-menu-collapsible page-header-dark vertical-modern-menu 2-columns  " data-open="click" data-menu="vertical-modern-menu" data-col="2-columns">
      <%= render "layouts/header" %>
      <%= render "layouts/sidebar" %>
      <div id="main">
        <div class="row">
          <div class="col s12">
            <div class="container">
              <%= yield %> 
            </div>
          </div>
        </div>
      </div>
  <% else %>
    <%= yield %>
  <% end %>
  <script type="text/javascript">
    var notice = "<%= notice %>"
    var alert = "<%= alert %>"
    function flashMessage() {
      if(notice != "") {
        M.toast({html: notice, classes: "alert-success"})
      }
      if(alert != "") {
        M.toast({html: alert, classes: "alert-danger"})
      }
    }
    window.onload = flashMessage;
  </script>
  </body>
</html>
  

<nav class="clean">
  <div class="nav-wrapper">
    <div class="col s12">
      <%= link_to("Dashboard", root_path , class: "breadcrumb") %>
      <%= link_to("Free Leaves", "#" , class: "breadcrumb") %>
    </div>
  </div>
</nav>
<div class="row">
  <div class="col s12">
    <div id="borderless-table" class="card card-tabs">
      <div class="card-content">
        <div class="card-title">
          <div class="row">
            <div class="col s12 m6 l10">
              <h3 class="card-title"><b>Free Leaves<b></h3>
            </div>
            <div class="col s12 m6 l2">
              <ul class="">
                <li><%= link_to 'Add Leave', new_free_leave_path, class: "btn cyan waves-effect waves-lightc " %></li>
              </ul>
            </div>
          </div>
        </div>
        <div id="view-borderless-table leave_data_wrap">
          <div class="row">
            <div class="col s12">
              <table id='leave_table'>
                <thead>
                  <tr>
                    <th>Employee</th>
                    <th>Leave count</th>
                    <th>Month/Year</th>
                    <th>Reason</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody class="leave_body">
                  <% @resources.each do |free_leave| %>
                  	<tr>
                  		<td><%= free_leave&.user&.first_name %></td>
                  		<td><%= free_leave&.extra_leave %></td>
                  		<td><%= free_leave&.leave_month.try(:strftime, "%b %Y") %></td>
                  		<td><%= free_leave&.reason %></td>
                  		<td><%= link_to 'Delete', free_leave_path(free_leave.id), method: :delete, data: {confirm: "Are you sure?"}  %></td>
                  	</tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
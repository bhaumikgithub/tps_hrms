<nav class="clean">
  <div class="nav-wrapper">
    <div class="col s12">
      <%= link_to("Dashboard", root_path , class: "breadcrumb") %>
      <%= link_to("Credentials", '#' , class: "breadcrumb") %>
    </div>
  </div>
</nav>
<div class="row">
    <div class="col s12">
      <div id="borderless-table" class="card card-tabs">
        <div class="card-content">
          <div class="card-title">
            <div class="row">
              <div class="col s12">
                <div class="card-title d-flex">
                <span class="font-26 flex-grow-1">Credentials</span>
                <span style="margin-right: 5px;"><%= link_to 'Credential Types', credential_types_path, class: "btn btn-success waves-effect waves-lightc", target: "_blank" %></span>
                <span><%= link_to 'ADD', new_credential_path, class: "btn cyan waves-effect waves-lightc " %></span>
              </div>
            </div>
          </div>
          <div id="view-borderless-table">
            <div class="row">
              <div class="col s12">
                <table id="credential_table">
                  <thead>
                    <tr>
                      <th>Project Name</th>
                      <th>Credential Type</th>
                      <th>Link</th>
                      <th>Email</th>
                      <th>Password</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @resources.each do |credential| %>
                      <tr>
                        <td><%= credential.project_name %></td>
                        <td><%= credential.credential_type.name %></td>
                        <td><%= credential.link %></td>
                        <td><%= credential.email %></td>
                        <td><%= credential.password %></td>
                        <td><%= link_to 'View', credential_path(credential.id) %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script type="text/javascript">
  
  $('#credential_table').DataTable({
    "dom": 'lf<<"datatable-responsive"t>ip>',
    responsive: true,
    "pageLength": 100
  });

</script>
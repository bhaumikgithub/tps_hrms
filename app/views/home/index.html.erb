<h3 class="center">welcome <%= current_user.full_name %></h3>
<h5><%= User.today_birthday.present? ?  'Todays Birthday' : ''%></h5> 

<% User.today_birthday.each do |user| %>
  <%= user.full_name %>
<% end %>

<h5><%= User.upcoming_birthday.present? ?  'Upcoming Birthdays' : ''%></h5> 


<% User.upcoming_birthday.each do |user| %>
  <%= user.full_name %> : <b> <%= user.birthday&.strftime('%d-%m-%Y') %></b>
<% end %>
<% if Date.parse(current_user.leave_added_on&.strftime('%y-%m-%d')) + 1.month <= Date.today  &&  current_user.admin?  %>
  <div class="row">
    <%= link_to "Add this month Leave", add_leave_path, class: 'btn btn-success float-left ml-2 add_leave' %>
  </div>
<% end %>


    <div class="row">
      <div class="col s4">
        <div class="card">
          <div class="card-content">
            <h5>Leave Balance</h5>
            <table class="table table-borderless">
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.full_name+ ':' %></td>
                  <td><%= user.leave_bal.present? ? user.leave_bal > 0 ? user.leave_bal : 0 : '0'%></td>
                </tr>
              <% end %>
            </table>

          </div>
        </div>
      </div>
    </div>
